{
  "manifest_version": 3,
  "name": "Tabby Teaching Assistant",
  "version": "2.1.0",
  "description": "Google extension to assist with teaching tasks.",
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "side_panel": {
    "default_path": "html/sidepanel.html"
  },
  "icons": {
    "16": "icons/cute-tabby-cat-peeking-over-edge-with-paws-curious-gaze-cut-out-transparent-png.png",
    "32": "icons/cute-tabby-cat-peeking-over-edge-with-paws-curious-gaze-cut-out-transparent-png.png",
    "64": "icons/cute-tabby-cat-peeking-over-edge-with-paws-curious-gaze-cut-out-transparent-png.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
